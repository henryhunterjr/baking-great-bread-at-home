
{
  "routes": [
    { "src": "/pdf.worker.min.js", "dest": "/pdf.worker.min.js", "headers": { "Cache-Control": "public, max-age=31536000, immutable" } },
    { "src": "/assets/pdf.worker.min.js", "dest": "/pdf.worker.min.js", "headers": { "Cache-Control": "public, max-age=31536000, immutable" } },
    { "src": "/cmaps/(.*)", "dest": "/cmaps/$1", "headers": { "Cache-Control": "public, max-age=31536000, immutable" } },
    { "src": "/tesseract/(.*)", "dest": "/tesseract/$1", "headers": { "Cache-Control": "public, max-age=31536000, immutable" } },
    { "src": "/assets/(.*)", "dest": "/assets/$1", "headers": { "Cache-Control": "public, max-age=604800" } },
    { "src": "/(.*\\.(js|css|woff2))", "dest": "/$1", "headers": { "Cache-Control": "public, max-age=31536000, immutable" } },
    { "src": "/(.*\\.(png|jpg|jpeg|svg|webp|avif))", "dest": "/$1", "headers": { "Cache-Control": "public, max-age=604800" } },
    { "src": "/favicon.ico", "dest": "/favicon.ico", "headers": { "Cache-Control": "public, max-age=86400" } },
    { "src": "/manifest.json", "dest": "/manifest.json", "headers": { "Cache-Control": "public, max-age=86400" } },
    { "src": "/(.*)", "dest": "/index.html" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET, POST, PUT, DELETE, PATCH, OPTIONS" },
        { "key": "Access-Control-Allow-Headers", "value": "X-Requested-With, Content-Type, Authorization, X-CSRF-Token, apikey, x-client-info" },
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "X-Frame-Options", "value": "DENY" },
        { "key": "X-XSS-Protection", "value": "1; mode=block" },
        { "key": "Referrer-Policy", "value": "strict-origin-when-cross-origin" },
        { "key": "Permissions-Policy", "value": "camera=*, microphone=*, geolocation=*" }
      ]
    },
    {
      "source": "/pdf.worker.min.js",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Content-Type", "value": "application/javascript" },
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    },
    {
      "source": "/_next/static/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    },
    {
      "source": "/assets/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=604800" }
      ]
    }
  ],
  "build": {
    "env": {
      "NPM_FLAGS": "--prefer-offline --no-audit --no-fund --no-optional"
    }
  },
  "redirects": [
    {
      "source": "/auth/callback",
      "destination": "/auth",
      "permanent": false
    },
    {
      "source": "/verify",
      "destination": "/auth",
      "permanent": false
    },
    {
      "source": "/callback",
      "destination": "/auth",
      "permanent": false
    }
  ]
}
